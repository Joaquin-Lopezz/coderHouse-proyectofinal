<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Administrador de Productos</title>
    <link rel="stylesheet" href="static/css/styleAdmin.css">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
</head>
<body>
    <header class="admin-header">
        <h1>Administrador de Productos</h1>
        <button id="logout">Cerrar Sesión</button>
    </header>
    <main>
        <section class="product-form-section">
            <h2>Nuevo Producto</h2>
            <form class="product-form">
                <div class="form-group">
                    <label for="title">Título:</label>
                    <input type="text" id="title" name="title" required>
                </div>
                <div class="form-group">
                    <label for="description">Descripción:</label>
                    <input type="text" id="description" name="description" required>
                </div>
                <div class="form-group">
                    <label for="price">Precio:</label>
                    <input type="number" id="price" name="price" required>
                </div>
                <div class="form-group">
                    <label for="thumbnail">Thumbnail:</label>
                    <input type="text" id="thumbnail" name="thumbnail" required>
                </div>
                <div class="form-group">
                    <label for="code">Código:</label>
                    <input type="text" id="code" name="code" required>
                </div>
                <div class="form-group">
                    <label for="stock">Stock:</label>
                    <input type="number" id="stock"   min="0" name="stock" required>
                </div>
                <div class="form-group">
                    <label for="category">Categoría:</label>
                    <input type="text" id="category" name="category" required>
                </div>
                <div class="form-group">
                    <label for="status">Estado:</label>
                    <input type="checkbox" id="status" name="status" value="true">
                </div>
                <button type="submit" class="submit-btn">Agregar Producto</button>
            </form>
        </section>
        <section id="productos-container"></section>
    </main>
    <script src="/static/js/agregarProducto.js"></script>
</body>